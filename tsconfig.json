{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@style/*": ["src/style/*"],
      "@schemas/*": ["src/schemas/*"],
      "@scripts/*": ["src/scripts/*"],
      "@artwork/*": ["src/artwork/*"]
    },
    "strictNullChecks": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
  }
}